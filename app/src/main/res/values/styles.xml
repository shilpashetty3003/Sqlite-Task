<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Theme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?colorSecondaryVariant</item>
        <item name="boxStrokeColor">@color/material_text_input_border_states</item>
        <item name="theme">@style/TextInputCursorColor</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    <style name="TextInputCursorColor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">#7c808e</item>
    </style>

    <style name="App.Theme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?colorSecondary</item>
    </style>

    <style name="App.Theme.Button.Pink" parent="App.Theme.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.All.Light</item>
        <item name="android:padding">12dp</item>
        <item name="rippleColor">@color/secondaryLightColor</item>
        <item name="backgroundTint">@drawable/material_button_pink_background</item>
        <item name="android:textColor">@drawable/material_button_pink_text</item>
    </style>

    <style name="ShapeAppearance.Rounded.All.Light" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/light_corner_cuts</item>
    </style>

    <style name="Text">

    </style>
</resources>